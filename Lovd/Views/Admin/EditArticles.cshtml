@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>News</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form  enctype="multipart/form-data" asp-action="EditArticles">
            @{ foreach (var a in Model)
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" value="@a.IdArticle" name="IdArticle" />
                    <div class="form-group">

                        <textarea class="textarea" name="ArticleHtml">@a.ArticleHtml </textarea>

                    </div>
                    <div class="form-group">

                        <input value="@a.Likes" name="Likes" class="form-control" />

                    </div>
                    <div class="form-group">

                        <input value="@a.DisLikes" name="DisLikes" class="form-control" />

                    </div>
                    <div class="form-group">

                        <input value="@a.UserId" type="hidden" name="UserId" class="form-control" />

                    </div>
                    <div class="form-group">

                        <input value="@a.DateNews" name="DateNews" class="form-control" />

                    </div>
                    <div class="form-group">

                        <input value="@a.Title" name="Title" class="form-control" />

                    </div>
                    <div class="form-group">

                        <input value="@a.Announce" name="Announce" class="form-control" />

                    </div>

                    <div class="myDivCover">
                        @{
                            var af = String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(@a.PhotoPreview));
                            <img object-fit="cover" class="myImg" src="@af" alt="im faded">
                        }
                    </div>
                    <div>Хотите новую картинку? </div>
                    <div class="form-group">
                        <input type="file" name="Photo">

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>} }
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexArticles">Back to List</a>
</div>
<style>
    .textarea {
        width: 100%
    }
</style>

